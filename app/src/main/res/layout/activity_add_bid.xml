<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.taskmagic.addBidActivity">

    <TextView
        android:id="@+id/taskTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_cancel"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/button_cancel"
        android:layout_marginTop="16dp"
        android:text="@string/taskTitle" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="249dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="@string/enterAmount" />

    <Button
        android:id="@+id/button_confirm"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="73dp"
        android:text="@string/confirm" />

    <Button
        android:id="@+id/button_cancel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_alignLeft="@+id/button_confirm"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/button_confirm"
        android:layout_marginBottom="10dp"
        android:text="@string/cancel" />

    <TextView
        android:id="@+id/taskTitleContent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/taskTitle"
        android:layout_alignStart="@+id/taskTitle"
        android:layout_below="@+id/taskTitle"
        android:text="TextView" />

    <TextView
        android:id="@+id/taskDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/taskTitle"
        android:layout_alignStart="@+id/taskTitle"
        android:layout_below="@+id/taskTitleContent"
        android:text="@string/taskDescription" />

    <TextView
        android:id="@+id/taskDescriptionContent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/taskTitle"
        android:layout_alignStart="@+id/taskTitle"
        android:layout_below="@+id/taskDescription"
        android:text="TextView" />

    <TextView
        android:id="@+id/enterAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:text="@string/enterAmount" />
</RelativeLayout>
