<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorGray">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp">

        <RelativeLayout
            android:id="@+id/bid_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/bidded_task_title"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:textSize="20sp"
                android:text="Task title here" />

            <TextView
                android:id="@+id/bidded_task_requester"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/bidded_task_title"
                android:layout_alignEnd="@+id/bidded_task_title"
                android:layout_below="@id/bidded_task_title"
                android:textSize="16sp"
                android:text="Requester full name here" />

            <TextView
                android:id="@+id/bidded_task_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/bidded_task_requester"
                android:layout_alignEnd="@+id/bidded_task_title"
                android:layout_below="@+id/bidded_task_requester"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"
                android:text="Task status here" />

            <TextView
                android:id="@+id/lowest_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@id/bidded_current_own"
                android:layout_marginTop="4dp"
                android:textSize="12sp"
                android:text="Your bid:" />

            <TextView
                android:id="@+id/bidded_current_own"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/lowest_text"
                android:layout_marginRight="20dp"
                android:text="$ss.ss" />

            <TextView
                android:id="@+id/own_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bidded_current_own"
                android:layout_alignStart="@id/bidded_current_own"
                android:textSize="12sp"
                android:text="Lowest:" />

            <TextView
                android:id="@+id/bidded_current_lowest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/bidded_current_own"
                android:layout_below="@id/own_text"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="4dp"
                android:text="$ss.ss" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>