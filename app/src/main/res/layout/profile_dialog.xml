<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="480dp">
    <TextView
        android:id="@+id/textView_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorBlack"
        android:text="Username" />

    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/linearLayout"
        android:layout_alignLeft="@+id/textView_username"
        android:layout_alignStart="@+id/textView_username"
        android:layout_below="@+id/textView_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView_usernameContent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:textSize="25sp"
            android:textColor="@color/colorBlack"
            android:text="TextView" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_alignTop="@+id/textView_usernameContent"
            android:layout_marginEnd="5dp"
            app:srcCompat="@drawable/ic_email" />
    </android.support.v7.widget.LinearLayoutCompat>


    <TextView
        android:id="@+id/textView_fullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_username"
        android:layout_alignStart="@+id/textView_username"
        android:layout_below="@+id/linearLayout"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorBlack"
        android:text="Fullname" />

    <TextView
        android:id="@+id/textView_fullnameContent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_username"
        android:layout_alignStart="@+id/textView_username"
        android:layout_below="@+id/textView_fullname"
        android:textSize="25sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorBlack"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_username"
        android:layout_alignStart="@+id/textView_username"
        android:layout_below="@+id/textView_fullnameContent"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorBlack"
        android:text="Email Adress" />

    <TextView
        android:id="@+id/textView_emailContent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_username"
        android:layout_alignStart="@+id/textView_username"
        android:layout_below="@+id/textView_email"
        android:textSize="25sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorBlack"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_username"
        android:layout_alignStart="@+id/textView_username"
        android:layout_below="@+id/textView_emailContent"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorBlack"
        android:text="Phone Number" />

    <TextView
        android:id="@+id/textView_phoneContent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_username"
        android:layout_alignStart="@+id/textView_username"
        android:layout_below="@+id/textView_phone"
        android:textSize="25sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorBlack"
        android:text="TextView" />

    <Button
        android:id="@+id/button_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="BACK" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_back"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="59dp" />



</RelativeLayout>