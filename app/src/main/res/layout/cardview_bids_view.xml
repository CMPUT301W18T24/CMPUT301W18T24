<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorGray">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="2dp"
        android:layout_marginHorizontal="2dp">

        <RelativeLayout
            android:id="@+id/bid_view_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/bid_view_task_title"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:textSize="20sp"
                android:text="Task title here" />

            <TextView
                android:id="@+id/bid_view_provider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/bid_view_task_title"
                android:layout_alignEnd="@+id/bid_view_task_title"
                android:layout_below="@id/bid_view_task_title"
                android:layout_marginBottom="10dp"
                android:textSize="16sp"
                android:text="Provider full name here" />

            <TextView
                android:id="@+id/own_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@id/bid_view_value"
                android:layout_marginTop="8dp"
                android:textSize="10sp"
                android:text="Your bid:" />

            <TextView
                android:id="@+id/bid_view_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/own_text"
                android:layout_marginRight="15dp"
                android:text="$ss.ss" />



        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>